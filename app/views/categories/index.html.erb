<div class="banner">
  <div class="banner-content">
    <h1>Move anywhere! <br/>
        Sport stuff near you, <br/>
        avaliable, <br/>
        simple</h1>
  </div>
</div>

<div class="text-center">
  <h1> Listing Category </h1>
</div>


<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-sm-4">
        <%= link_to products_path(@category) do %>
          <div class="card">
            <div class="card-description">
                <%= category.name %>
            </div>
          </div>
        <% end %>

      </div>
    <% end %>
  </div>
</div>



